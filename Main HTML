      var myfirebaseRef = new Firebase("https://ratemycourse.firebaseio.com");
        
        function veryEasy(){difficulty = "Very Easy"};
        function easy(){difficulty = "Easy"};
        function medium(){difficulty = "Medium"};
        function hard(){difficulty = "Hard"};
        function veryHard(){difficulty = "Very Hard"};
        
        
        function Save(){
            
            var University = document.getElementById('University').value;
            var coursename = document.getElementById('coursename').value;
            var difficulty = document.getElementById('difficulty').value;
            var workload = document.getElementById('workload').value;
            var textbook = document.getElementById('textbook').value;
            var onlineMaterial = document.getElementById('onlineMaterial').value;
            var Curve = $('input[name="curve"]:checked').val();
            
            /*var university= ('#university').val();
            var courseName= $('#coursename').val();
            var difficulty= $('#difficulty').val();
            var workload= $('#workload"').val();
            var textbook= $('#textbook').val();
            var onlineMaterial= $('#onlinemat').val();
            var curve = $('#curve').val();
            */
       
           
  myfirebaseRef.child(University).push({
  NameUniversity: University,
  Course: coursename,    
  Difficulty: difficulty,       
  WorkLoad: workload,
  TextBook: textbook,                  
  OnlineMaterial: onlineMaterial,
  curve: Curve                    
});
             
                 }
                function Reset(){ 
                document.getElementById("myForm").reset();
                alert("Request Sent"); }
                 	</script>
					
